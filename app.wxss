/**app.wxss**/
@import "wxParse/wxParse.wxss";
.container {
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
  width: 100%;
  background: #F5F5F5;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  position: absolute;
  z-index:0;

  margin: 0px;
  margin-left: 0;
  margin-top: 0px;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
  box-shadow: 0px 0px 6px 0px #fff;
} 

.item{/*主列表*/
  width: 95%;
  height: auto;
  margin: 0px 0px 0px 0px;
}

.img{/*缩略图*/
  margin:0 auto;
  max-height:500rpx;
}

.v_hr{/*主串列表分割线*/
  height: 1px;
  width: 95%;
  margin: 5px auto;
  background: #A1A1A1;
  border: 1px solid #C4C4C4;
  border-radius: 2px;
}


.b1{/*第一行信息栏 ID UID 时间*/
  display:flex;
  color:#00CCFF;
  font-size: 12px;
  justify-content: space-between;
}


.b2{/*第二第三行信息栏 标题 姓名*/
  display:block;
  font-size: 12px;
  color: #A6A6A6;
  margin: 0px 0px 0px 0px;
}
.title{/*标题*/
 word-break:break-all;
}

.xuankuhongming{/*炫酷红名*/
  color:#f00;
}

.timelinefname{
  color:#f00;
  font-size: 12px;
  margin-top: 2px;
  text-align: right;
  margin-left: 0px;
}
.sage{/*SAGE*/
  color:#f00;
  font-size: 12px;
  margin-right: 10px;
  margin-top: 2px;
  text-align: right;
}

.readcount{/*回应数*/
  color:#00CCFF;
  font-size: 12px;
  margin-left: 10px;
  margin-top: 2px;
  text-align: left;
}

.footer{/*低栏*/
  display:flex;
  justify-content: space-between;
  bottom: 0pt;
	margin: 0pt;
  position: fixed;
  margin-bottom:0px;
  width: 100%;
  background-color: #00CCFF;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.icons{/*底栏图标*/
  width: 45px;
  height: 45px;
  margin: 0px 15px 0px 15px;
}
.icons:active{
  filter: 0px 0px #000;
}

.list_bot{
    width: 100%;
    background: #F5F5F5;
    height: 45px;
    font-size: 15px;
    margin: 0 auto;
    text-align: center;
    color: #00ccff;
    margin-bottom: 45px;
}
.bequote{/*引用*/
  color:#9BCD9B;
  background-color: #EAEAEA;
  font-size: 30rpx;
  float: left;
  margin-top: 1px;
}
.be_br{
  display: flex;
  float: none;
  width: 100%; 
}
.input_cs{
  border: 1px solid #FF8000;
}
.box{/*遮罩层*/
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background:#000;
  opacity:0.7;
  z-index:1;
}
.loading_gif{
  width: 24px;
  height: 24px;
}
.hiddenScroll{
  overflow:hidden;
  position:fixed;
}